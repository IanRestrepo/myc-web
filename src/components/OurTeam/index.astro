---
import TeamCard from '../TeamCard/index.astro';
const people = [
  { name: 'Paul V', affiliation: 'Pantera Capital', image: '/placeholder.svg?height=80&width=80' },
  { name: 'Daniel Gulati', affiliation: 'Comcast Ventures', image: '/placeholder.svg?height=80&width=80' },
  { name: 'Alexandr Wang', affiliation: 'CEO, Scale', image: '/placeholder.svg?height=60&width=60' },
  { name: 'Eddy Lu', affiliation: 'CEO, GOAT Group', image: '/placeholder.svg?height=60&width=60' },
  { name: 'Carl Pei', affiliation: 'CEO, Nothing', image: '/placeholder.svg?height=60&width=60' },
  { name: 'Bo Jiang', affiliation: 'CEO, Lithic', image: '/placeholder.svg?height=60&width=60' },
